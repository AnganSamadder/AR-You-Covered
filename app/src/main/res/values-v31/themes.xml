<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Android 12+ -->
    <style name="Theme.ARYouCovered" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/state_farm_red</item>
        <item name="colorPrimaryVariant">@color/state_farm_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/state_farm_red_light</item>
        <item name="colorSecondaryVariant">@color/state_farm_red_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Android 12+ Splash Screen -->
        <item name="android:windowSplashScreenBackground">@color/state_farm_red</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/sf_logo_red</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/state_farm_red</item>
    </style>
    
    <!-- Splash activity theme with proper splash screen -->
    <style name="Theme.ARYouCovered.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/state_farm_red</item>
        <item name="colorPrimaryVariant">@color/state_farm_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/state_farm_red</item>
        
        <!-- Android 12+ Splash Screen for splash activity -->
        <item name="android:windowSplashScreenBackground">@color/state_farm_red</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/sf_logo_red</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/state_farm_red</item>
    </style>
</resources> 